    - let min = 1, max = 10
    - let a = -20, b = -20;

    div.wrap(role='group' aria-labelledby='multi-lbl' 
          style=`--a: ${a}; --b: ${b}; --min: ${min}; --max: ${max}`)
      input#a(type='range' min=min value=a max=max).range-slider.js-range-slider
      input#b(type='range' min=min value=b max=max).range-slider_second-thumb.js-range-slider_second-thumb
    div.label
      div.label_first Current first value:
      div.label_second Current second value:
      div.label__max-def-value
      div.label__min-def-value
      div.label__step Step of slider: 